# Authentication
AUTH_URL=http://localhost:3000/api/auth
AUTH_SECRET=your-secret-key-here

# Database Configuration
# Choose one of the connection string options based on your database provider
POSTGRES_URL=postgresql://username:password@host:port/database?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://username:password@host:port/database?sslmode=require
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_HOST=your_host
POSTGRES_PORT=5432
POSTGRES_DATABASE=your_database

# Alternative database variable names (for compatibility with different providers)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL_UNPOOLED=postgresql://username:password@host:port/database?sslmode=require

# Neon-specific configuration (if using Neon)
PGHOST=your_neon_host
PGHOST_UNPOOLED=your_neon_host_unpooled
PGUSER=your_username
PGDATABASE=your_database
PGPASSWORD=your_password

# Prisma-specific configuration
POSTGRES_PRISMA_URL=postgresql://username:password@host:port/database?sslmode=require&connect_timeout=15
